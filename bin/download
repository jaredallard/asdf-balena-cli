#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

# If we're looking for the latest version, translate it into the latest
# version at the moment.
if [[ "$ASDF_INSTALL_VERSION" == "latest" ]]; then
  ASDF_INSTALL_VERSION=$("${plugin_dir}/bin/latest-stable")
fi

mkdir -p "$ASDF_DOWNLOAD_PATH"

release_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME-$ASDF_INSTALL_VERSION.tar.gz"

# Download tar.gz file to the download directory
download_release "$ASDF_INSTALL_VERSION" "$release_file"

#  Extract contents of tar.gz file into the download directory
tar -xzf "$release_file" -C "$ASDF_DOWNLOAD_PATH" --strip-components=1 || fail "Could not extract $release_file"

# Create shim for executing balena properly
echo "Creating shim"
mkdir -p "$ASDF_DOWNLOAD_PATH/bin"
cat >"$ASDF_DOWNLOAD_PATH/bin/balena" <<EOF
#!/usr/bin/env bash
exec "$ASDF_DOWNLOAD_PATH/balena-cli/balena" "\$@"

EOF
chmod +x "$ASDF_DOWNLOAD_PATH/bin/balena"

# Remove the tar.gz file since we don't need to keep it
rm "$release_file"
